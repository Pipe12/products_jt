<div class="container col-sm-6">
	<div class="row">
		<h1>Editar producto</h1>
	</div>
	<!-- Edit form -->
	<%= form_for(@product, url: product_path) do |form| %>
		<div class="form-group">
			<%= form.text_field :name, placeholder: "Nombre", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= form.text_field :price, placeholder: "Precio", class: "form-control" %>
		</div>
		<div class="form_group">
			<ul>
				<% @categories.each do |category| %>
					<li>
						<% if @product.categories.exists?("#{category.id}") %>
							<% check = true %>
						<% else %>
							<% check = false %>
						<% end %>
						<%= check_box_tag "category_ids[]", category.id, check%>
						<%= category.name %>
					</li>
				<% end %> 
			</ul>
		</div>
		<%= form.submit 'Editar producto', class: 'btn btn-primary btn-block' %>
	<% end %>
</div>